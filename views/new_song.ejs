<%- include('header') %> <%- include('navbar') %>

<div class="container entry-form">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-10">
      <form
        class="entry-form-container"
        action="/add"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="row">
          <h2>Favourvite Song Entry</h2>
          <p class="mb-5">Tell us what's on your repeat</p>
          <div class="col">
            <div class="form-group">
              <label for="title">Song title: </label>
              <input class="form-control" name="title" id="title" required />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="artist">Artist: </label>
              <input
                required
                class="form-control"
                type="artist"
                name="artist"
                id="artist"
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="duration">Duration: </label>
              <input
                class="form-control"
                type="text"
                name="duration"
                id="duration"
                required
              />
            </div>
          </div>
        </div>
        <div class="row mt-4">
          <div class="form-group col-8">
            <label for="link" class="mb-2">Youtube Link: </label>
            <input
              class="form-control"
              type="link"
              name="link"
              id="link"
              required
            />
          </div>
          <div class="col-4">
            <label for="formFile" class="form-label">Upload photo</label>
            <input
              class="form-control"
              type="file"
              id="formFile"
              name="photo"
              required
            />
          </div>
        </div>
        <br /><br />
        <p>Genre:</p>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="English"
            id="genre"
          />
          <label class="form-check-label" for="genre"> English </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="Mandarin"
            id="genre"
          />
          <label class="form-check-label" for="genre"> Mandarin </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="Korean"
            id="genre"
          />
          <label class="form-check-label" for="genre"> Korean </label>
        </div>
        <div class="row"></div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="ROCK"
            id="genre"
          />
          <label class="form-check-label" for="genre"> ROCK </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="R&B"
            id="genre"
          />
          <label class="form-check-label" for="genre"> R&B </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="POP"
            id="genre"
          />
          <label class="form-check-label" for="genre"> POP </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="RAP"
            id="genre"
          />
          <label class="form-check-label" for="genre"> RAP </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="HIPHOP"
            id="genre"
          />
          <label class="form-check-label" for="genre"> HIP HOP </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="CLASSIC"
            id="genre"
          />
          <label class="form-check-label" for="genre"> CLASSIC </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="BLUES"
            id="genre"
          />
          <label class="form-check-label" for="genre"> BLUES </label>
        </div>

        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="genre"
            value="MOOD"
            id="genre"
          />
          <label class="form-check-label" for="genre"> MOOD </label>
        </div>
        <br /><br />
        <button type="submit" class="btn btn-secondary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>

<%- include ('footer') %>
